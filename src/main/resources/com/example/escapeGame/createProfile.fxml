<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escapeGame.CreateProfileController">
    <children>
        <Label layoutX="50" layoutY="30" style="-fx-font-size: 20px;" text="Create Profile">
         <font>
            <Font name="Arial Black" size="18.0" />
         </font></Label>
        <Label layoutX="50" layoutY="80" text="Username:">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font></Label>
        <TextField fx:id="usernameField" layoutX="150" layoutY="75" />
        <Label layoutX="50" layoutY="120" text="Email:">
         <font>
            <Font name="Arial Black" size="16.799999237060547" />
         </font></Label>
        <TextField fx:id="emailField" layoutX="150" layoutY="115" />
        <Label layoutX="50" layoutY="160" text="Password:">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font></Label>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="155" />
        <Button fx:id="createButton" layoutX="150" layoutY="210" onAction="#handleCreateProfile" style="-fx-background-color: #C0C0C0;" text="Create">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font></Button>
        <Label fx:id="statusLabel" layoutX="150" layoutY="250" textFill="red" />
      <Button fx:id="backButton" layoutX="50.0" layoutY="256.0" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #C0C0C0;" text="Back">
         <font>
            <Font name="Arial Black" size="16.799999237060547" />
         </font>
      </Button>
    </children>
</AnchorPane>
