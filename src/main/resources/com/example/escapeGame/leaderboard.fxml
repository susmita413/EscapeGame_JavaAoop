<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escapeGame.LeaderboardController" style="-fx-background-color: #4E2D10;">
    <top>
        <HBox spacing="10" BorderPane.alignment="CENTER" style="-fx-background-color: #BA892E;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <Button text="&lt; Back" onAction="#goBack" />
                <Label text="Leaderboard" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnReset" text="Reset Player" onAction="#handleResetPlayer" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="10.0" fillWidth="true">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <!-- Players summary table -->
                <Label text="Players Summary" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" />
                <TableView fx:id="playersTable" VBox.vgrow="NEVER" prefHeight="200.0" style="-fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colSummaryPlayer" text="Player" prefWidth="200" />
                        <TableColumn fx:id="colSolo" text="Solo Plays" prefWidth="120" />
                        <TableColumn fx:id="colMulti" text="Competitive Plays" prefWidth="160" />
                        <TableColumn fx:id="colPrimaryMode" text="Primary Mode" prefWidth="160" />
                        <TableColumn fx:id="colHardAchievements" text="Hard Achievements" prefWidth="300" />
                    </columns>
                </TableView>

                <!-- Escapes table -->
                <Label text="Escapes (All Users)" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" />
                <TableView fx:id="escapesTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colEscapeUser" text="Player" prefWidth="180" />
                        <TableColumn fx:id="colEscapeRoom" text="Room" prefWidth="180" />
                        <TableColumn fx:id="colEscapeLevel" text="Level" prefWidth="120" />
                        <TableColumn fx:id="colEscapeMode" text="Mode" prefWidth="120" />
                        <TableColumn fx:id="colEscapeHighScore" text="High Score" prefWidth="150" />
                        <TableColumn fx:id="colEscapeDate" text="Date" prefWidth="220" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>