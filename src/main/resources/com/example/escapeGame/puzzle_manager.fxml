<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="508.0" prefWidth="932.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escapeGame.PuzzleManagerController">
    <top>
        <HBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Button onAction="#goBack" text="&lt; Back" />
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Puzzle Manager" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#handleAdd" text="Add" />
                <Button onAction="#handleEdit" text="Edit" />
                <Button onAction="#handleDelete" text="Delete" />
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="puzzleTable">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                <TableColumn fx:id="colRoom" prefWidth="150" text="Room" />
                <TableColumn fx:id="colQuestion" prefWidth="260" text="Question" />
                <TableColumn fx:id="colAnswer" prefWidth="160" text="Answer" />
                <TableColumn fx:id="colDifficulty" prefWidth="100" text="Difficulty" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label text="Room" />
                <TextField fx:id="roomField" promptText="Room" />
                <Label text="Question" />
                <TextField fx:id="questionField" prefWidth="250" promptText="Question" />
                <Label text="Answer" />
                <TextField fx:id="answerField" promptText="Answer" />
                <Label text="Difficulty" />
                <ComboBox fx:id="difficultyBox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Easy" />
                            <String fx:value="Medium" />
                            <String fx:value="Hard" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>
